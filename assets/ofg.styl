@import 'nib'
@import "vendor/animate.css"
@import "vendor/bootstrap.min.css"

main-blue = #1694d5

html,body,.container
  height 100%
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

body
  background #EEE;

ul
  list-style-type none
  margin 0
  padding 0

.container
  margin-top 70px
  max-width 2600px

.container > section
  background #000
  border-bottom 10px solid #333
  width 100%
  height 100%
  padding 10px

.template
  display none

span.emphasis
  font-weight bold

@import "views/header"
@import "views/footer"
@import "views/work"
@import "views/about"
@import "views/contact"
@import "views/videoProfile"
