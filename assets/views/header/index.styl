header
  background #FFF url(/images/ofg_logo.png) 95% 5px no-repeat
  color #333
  font-weight lighter
  text-transform uppercase
  box-shadow #555 0 10px 100px

  h1
    margin 14px 0 0 8px
    color main-blue
    text-transform uppercase

  .grid
    display flex
    margin-top 5px

  nav
    a
      margin-left 30px
      color black
      font-size 14px
      cursor pointer
      text-decoration none
    a:first-child
      margin-left 12px
    a:hover
      text-decoration none

  .social-links
    margin-left 10px

    a
      display inline-block
      width 14px
      height 18px
      margin-left 10px

    a.facebook
      background url("images/social/fb.png") 0 3px no-repeat
    a.twitter
      background url("images/social/twi.png") 0 3px no-repeat
    a.vimeo
      background url("images/social/vim.png") 0 3px no-repeat

#navbar
  z-index 1

