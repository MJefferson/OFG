.video-profile
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  padding 100px 20px
  background-color #1694D5
  color #FFF
  z-index 0
  animation-duration .5s
  @clearfix()

  h1
    font-size 14px
    font-weight bold
    letter-spacing 0.5px
    margin-bottom 5px
    text-transform uppercase

  .metadata
    max-width 320px 
    float left
  .client, .url
    margin 20px 0
    @clearfix()
    h1
      float left
      margin 0
    span, a
      float right
      color white
      text-decoration none
  video
    width 400px
    height 300px
    background-color #000
    float left
    margin 20px 0 0 150px
  .forward-arrow
    position absolute
    right 20px
    top 45%
    cursor pointer

@keyframes slideInRight
  0%
    transform translateX(2000px)

  100%
    transform translateX(0)
