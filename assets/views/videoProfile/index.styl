.video-profile
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  padding 100px 20px
  background-color #1694D5
  z-index 0
  animation-duration .5s
  color #FFF

  h1
    font-size 14px
    font-weight bold
    letter-spacing 0.5px
    margin-bottom 5px
    text-transform uppercase

  .metadata
    max-width 320px 
  .client, .url
    margin 20px 0
    @clearfix()
    h1
      float left
      margin 0
    span, a
      float right
      color white
      text-decoration none

@keyframes slideInRight
  0%
    transform translateX(2000px)

  100%
    transform translateX(0)
