#thumbnail-grid
  max-width 550px
  max-height 100%
  overflow auto

  li
    display inline-block
    margin 10px
    img
      display block
    label
      display block
      background-color #1694d5
      background url(images/bg/content_bg.png) repeat-y #1694d5
      background-size cover
      text-align right
      font-size 12px
      padding 8px
      color white
      border-bottom-left-radius 5px
      border-bottom-right-radius 5px
      span.boldTitle
        font-weight bold

section.work
  background-image url(images/bg/mountain_smaller.jpg)
  background-size cover
  background-repeat no-repeat
